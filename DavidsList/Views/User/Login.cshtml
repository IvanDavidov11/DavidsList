@model LoginFormModel
<h1>Log in</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <a href="/User/Register"><h6>If you do not have an account, register here!</h6></a>
                <hr>
                @if (ViewContext.ViewData.ModelState.ErrorCount > 0)
                {
                    <span class="text-danger">Login failed, check your Username and Password!</span>
                }

                <div class="form-group">
                    <label asp-for="Username">Username *</label>
                    <input asp-for="Username" class="form-control">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password *</label>
                    <input type="password" asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <div class="checkbox">

                        <label for="Input_RememberMe">
                            <input type="checkbox" data-val="true" data-val-required="The Remember me? field is required." id="Input_RememberMe" name="Input.RememberMe" value="true">
                            Remember me?
                        </label>
                    </div>
                </div>

                @Html.AntiForgeryToken()
                <button id="registerSubmit" type="submit" class="btn btn-primary">Log In </button>


